{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "jsRules": {},
  "rules": {
    "space-before-function-paren": true,
    "arrow-parens": false,
    // use single quotes, but enforce double quotes in JSX
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "max-classes-per-file": [
      true,
      5,
      "exclude-class-expressions"
    ],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "jsx-no-lambda": false,
    "no-debugger": false,
    "no-console": false,
    "no-submodule-imports": false,
    // I prefer no semi colons :)
    "semicolon": [
      true,
      "never"
    ],
    // This rule makes each Interface be prefixed with 'I' which I don't like
    "interface-name": [
      true,
      "always-prefix"
    ],
    // This rule enforces objects to always have keys in alphabetical order
    "object-literal-sort-keys": false
  },
  "rulesDirectory": []
}